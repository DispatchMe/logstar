{
  "name": "logstar",
  "version": "1.0.4",
  "description": "Simple, opinionated, isomorphic logging.",
  "main": "dist/logger.js",
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "https://github.com/dispatchme/logstar.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "babel --presets 'es2015' --ignore __tests__ lib --out-dir dist",
    "lint": "eslint ./lib",
    "prepublish": "rm -rf dist/** && npm run build",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha --require mocha.conf.js lib/**/*-test.js",
    "test:watch": "npm run test:unit -- --watch"
  },
  "keywords": [
    "autoconfigure",
    "isomorphic",
    "logging",
    "loggly",
    "universal",
    "winston"
  ],
  "browser": {
    "winston": false,
    "winston-loggly": false,
    "util": false
  },
  "dependencies": {
    "winston": "^2.1.1",
    "winston-loggly": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.x.x",
    "babel-core": "6.x.x",
    "babel-eslint": "4.x.x",
    "babel-preset-es2015": "6.x.x",
    "eslint": "1.9.x",
    "eslint-config-airbnb": "1.0.0",
    "expect": "1.13.x",
    "mocha": "2.x.x"
  }
}
