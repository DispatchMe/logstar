{
  "name": "logstar",
  "version": "3.1.0",
  "description": "Simple, opinionated, isomorphic logging.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dispatchme/logstar.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && babel --presets 'es2015' --ignore *.tests.js lib --out-dir dist",
    "lint": "eslint . --ext .js",
    "jscs": "jscs .",
    "lint:fix": "npm run lint -- --fix || true",
    "jscs:fix": "jscs . --fix || true",
    "cover": "npm run lint && babel-node ./node_modules/istanbul/lib/cli cover node_modules/mocha/bin/_mocha lib/**/*.tests.js",
    "mocha": "node_modules/mocha/bin/_mocha --compilers js:babel-core/register --recursive 'lib/**/*.tests.js'",
    "test": "npm run lint && npm run mocha",
    "test:watch": "npm run mocha -- --watch",
    "prepublish": "npm run build"
  },
  "keywords": [
    "autoconfigure",
    "isomorphic",
    "logging",
    "loggly",
    "universal",
    "winston"
  ],
  "browser": {
    "winston": false,
    "winston-loggly": false,
    "util": false
  },
  "dependencies": {
    "underscore": "^1.8.3",
    "winston": "^2.1.1",
    "winston-loggly-bulk": "^1.3.4"
  },
  "devDependencies": {
    "babel-cli": "6.x.x",
    "babel-core": "6.x.x",
    "babel-eslint": "4.x.x",
    "babel-preset-es2015": "6.x.x",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "1.9.x",
    "eslint-config-airbnb": "1.0.0",
    "expect": "1.13.x",
    "mocha": "2.x.x"
  }
}
